    <Setter Property="WidthRequest" Value="30" />
    <Setter Property="HeightRequest" Value="25" />
    <Setter Property="Margin" Value="50, 5, 0, 5" />
  </Style>

  <Style x:Key="ThumbImageProvince" TargetType="Image">
    <Setter Property="Source" Value="Assets/pin.png" />
    <Setter Property="WidthRequest" Value="30" />
    <Setter Property="HeightRequest" Value="25" />
    <Setter Property="Margin" Value="50, 5, 0, 5" />
  </Style>

  <Style x:Key="ThumbImageKilometers" TargetType="Image">
    <Setter Property="Source" Value="Assets/road.png" />
